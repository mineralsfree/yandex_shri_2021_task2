{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "target": "ES2016",
    "removeComments": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "sourceMap": true,
    "outDir": "build"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules", "**/*.test.ts", "**/*.mock.ts"
  ]
}